@model Clinica.Medica.Application.DTOs.PacienteDto
@{
    ViewData["Title"] = "Cadastro de Pacientes";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Cadastro de Pacientes</h2>
        <p class="text-muted">Registre um novo paciente no sistema</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-4"><i class="bi bi-person-circle text-primary"></i> Dados do Paciente</h5>
                    <form asp-action="Criar" method="post">
                        <div class="mb-3">
                            <label class="form-label">Nome Completo *</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do paciente" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Data de Nascimento *</label>
                            <input asp-for="Dtnascimento" class="form-control" type="date" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Telefone *</label>
                            <input asp-for="Telefone" class="form-control" placeholder="(11) 99999-9999" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sexo *</label>
                            <select asp-for="Sexo" class="form-select" required>
                                <option value="">Selecione o sexo</option>
                                <option value="M">Masculino</option>
                                <option value="F">Feminino</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">E-mail *</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="paciente@email.com" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Cadastrar Paciente</button>
                    </form>
                </div>
            </div>

            <div class="card mt-4 border-info">
                <div class="card-body text-muted small">
                    <strong class="text-primary">• Informações importantes:</strong><br />
                    • Todos os campos marcados com (*) são obrigatórios<br />
                    • Após o cadastro, o paciente receberá um número sequencial<br />
                    • O paciente deve se dirigir à triagem com o número fornecido
                </div>
            </div>
        </div>
    </div>
</div>
